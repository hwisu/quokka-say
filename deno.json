{
  "name": "@hwisu/quokka-say",
  "version": "0.1.1",
  "description": "A modern implementation of cowsay but with a quokka character",
  "exports": {
    ".": "./mod.ts",
    "./cli": "./cli.ts"
  },
  "publish": {
    "exclude": ["dist/", "quokka-say"]
  },
  "tasks": {
    "dev": "deno run --allow-read --allow-env --allow-run src/main.ts",
    "start": "deno run --allow-read --allow-env --allow-run src/main.ts",
    "build": "deno compile --allow-read --allow-env --allow-run --no-check --include=src/quokka.txt --output quokka-say src/main.ts",
    "build:mac": "deno compile --allow-read --allow-env --allow-run --no-check --include=src/quokka.txt --target x86_64-apple-darwin --output dist/quokka-say-mac src/main.ts",
    "build:mac-arm": "deno compile --allow-read --allow-env --allow-run --no-check --include=src/quokka.txt --target aarch64-apple-darwin --output dist/quokka-say-mac-arm64 src/main.ts",
    "build:linux": "deno compile --allow-read --allow-env --allow-run --no-check --include=src/quokka.txt --target x86_64-unknown-linux-gnu --output dist/quokka-say-linux src/main.ts",
    "build:win": "deno compile --allow-read --allow-env --allow-run --no-check --include=src/quokka.txt --target x86_64-pc-windows-msvc --output dist/quokka-say-win.exe src/main.ts",
    "build:all": "mkdir -p dist && deno task build:mac && deno task build:mac-arm && deno task build:linux && deno task build:win",
    "test": "deno test --allow-read --allow-env"
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/path": "jsr:@std/path@^1.0.7"
  },
  "fmt": {
    "indentWidth": 2,
    "singleQuote": true,
    "lineWidth": 100
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "author": "hwisu",
  "repository": "https://github.com/hwisu/quokka-say",
  "homepage": "https://github.com/hwisu/quokka-say",
  "license": "MIT",
  "keywords": [
    "deno",
    "cowsay",
    "quokka",
    "terminal",
    "cli",
    "ascii-art"
  ],
  "bin": {
    "quokka-say": "./cli.ts"
  }
}
